@model System.Security.Claims.ClaimsPrincipal
@using System.Security.Claims
@{
	Layout = null;
}

<!doctype html>
<html>
	<head><title>Authentication</title>
	<meta charset="utf-8" />
	</head>
	<style>
section{
	position:absolute;
	top: 50%;
    left: 50%;
	margin-right: -50%;
    transform: translate(-50%, -50%)
}
.btn {
  width: 150px;
  height: 50px;
  color: #000;
  border-radius: 5px;
  padding: 10px 25px;
  margin-left:250px;
  margin-top: 15px;
  font-family:  'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif, Times, serif, sans-serif;
  font-weight:900;
  font-size:24px;
  
  background: transparent;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  display: inline-block;
  outline: none;
}
.btn-1 {
 background: rgb(234,234,234);
  background: linear-gradient(0deg, rgba(234,234,234,1) 0%, rgba(234,234,234,1) 100%);
  border: none;
  
}
.btn-1:before {
  height: 0%;
  width: 2px;
}
.btn-1:hover {
  box-shadow:  1px 1px 3px 0 rgba(255,255,255,.5),
              -1px -1px 3px 0 rgba(116, 125, 136, .5), 
    inset -1px -1px 3px 0 rgba(255,255,255,.2),
    inset 1px 1px 3px 0 rgba(0, 0, 0, .4);
}
	</style>
	<body>
	<section>
	<h1>You are authorized!</h1>
	@if(Model is not null){
		<h2>Hi, @Model.Identity.Name </h2>
	}
	<p>
		You successfully logged in with @Model.Identity.AuthenticationType.
		Here you can see a user secret<br />
		You are a @Model.FindFirst(ClaimTypes.Role).Value <br/>
		<img src = "https://avatarko.ru/img/kartinka/18/zhivotnye_sobaka_computer_17767.jpg" />
	</p>
		<form method="get" action="~/Account/logout">
			<input class="btn btn-1" type="submit" value="Log out" />
		</form>
	</section>
	</body>
</html>